    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "openscad-lsp",
            "cargo": {
                "args": [
                    "build",
                    "--bin=openscad-lsp",
                    "--package=openscad-lsp",
                ],
                "filter": {
                    "name": "openscad-lsp",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "attach",
            "program": "${workspaceFolder}/target/debug/openscad-lsp",
            "sourceLanguages": ["rust"]
        }
    ]
}